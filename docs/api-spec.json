{
  "technical_specifications": {
    "data_schemas": {
      "user_story": {
        "type": "object",
        "title": "User Story Schema",
        "$schema": "http://json-schema.org/draft-07/schema#",
        "required": [
          "id",
          "title",
          "description",
          "priority",
          "status",
          "created_at",
          "updated_at"
        ],
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "tags": {
            "type": "array",
            "items": {
              "type": "string",
              "maxLength": 50,
              "minLength": 1
            },
            "maxItems": 10
          },
          "title": {
            "type": "string",
            "maxLength": 255,
            "minLength": 1
          },
          "status": {
            "enum": [
              "backlog",
              "in_progress",
              "review",
              "done",
              "blocked"
            ],
            "type": "string"
          },
          "priority": {
            "enum": [
              "low",
              "medium",
              "high",
              "critical"
            ],
            "type": "string"
          },
          "created_at": {
            "type": "string",
            "format": "date-time"
          },
          "updated_at": {
            "type": "string",
            "format": "date-time"
          },
          "assigned_to": {
            "type": "string",
            "format": "uuid"
          },
          "description": {
            "type": "string",
            "maxLength": 2000
          },
          "story_points": {
            "type": "integer",
            "maximum": 100,
            "minimum": 1
          },
          "acceptance_criteria": {
            "type": "array",
            "items": {
              "type": "string",
              "maxLength": 500
            }
          }
        }
      }
    },
    "api_endpoints": {
      "info": {
        "title": "User Story Management API",
        "version": "1.0.0",
        "description": "API for managing user stories and related functionality"
      },
      "paths": {
        "/health": {
          "get": {
            "summary": "Health check endpoint",
            "responses": {
              "200": {
                "content": {
                  "application/json": {
                    "schema": {
                      "$ref": "#/components/schemas/HealthResponse"
                    }
                  }
                },
                "description": "Service is healthy"
              }
            },
            "operationId": "healthCheck"
          }
        },
        "/status": {
          "get": {
            "summary": "System status endpoint",
            "responses": {
              "200": {
                "content": {
                  "application/json": {
                    "schema": {
                      "$ref": "#/components/schemas/StatusResponse"
                    }
                  }
                },
                "description": "System status information"
              }
            },
            "operationId": "getStatus"
          }
        }
      },
      "openapi": "3.0.0",
      "servers": [
        {
          "url": "https://api.example.com/v1",
          "description": "Production server"
        }
      ],
      "components": {
        "schemas": {
          "Error": {
            "type": "object",
            "required": [
              "code",
              "message",
              "timestamp"
            ],
            "properties": {
              "code": {
                "type": "string"
              },
              "details": {
                "type": "object"
              },
              "message": {
                "type": "string"
              },
              "timestamp": {
                "type": "string",
                "format": "date-time"
              }
            }
          },
          "HealthResponse": {
            "type": "object",
            "required": [
              "status",
              "timestamp"
            ],
            "properties": {
              "status": {
                "enum": [
                  "healthy",
                  "unhealthy"
                ],
                "type": "string"
              },
              "version": {
                "type": "string"
              },
              "timestamp": {
                "type": "string",
                "format": "date-time"
              }
            }
          },
          "StatusResponse": {
            "type": "object",
            "required": [
              "system",
              "uptime",
              "environment"
            ],
            "properties": {
              "system": {
                "type": "string"
              },
              "uptime": {
                "type": "integer",
                "description": "Uptime in seconds"
              },
              "build_info": {
                "type": "object",
                "properties": {
                  "version": {
                    "type": "string"
                  },
                  "build_date": {
                    "type": "string",
                    "format": "date-time"
                  },
                  "commit_hash": {
                    "type": "string"
                  }
                }
              },
              "environment": {
                "type": "string"
              }
            }
          }
        },
        "securitySchemes": {
          "apiKey": {
            "in": "header",
            "name": "X-API-Key",
            "type": "apiKey"
          },
          "bearerAuth": {
            "type": "http",
            "scheme": "bearer",
            "bearerFormat": "JWT"
          }
        }
      }
    },
    "technical_constraints": {
